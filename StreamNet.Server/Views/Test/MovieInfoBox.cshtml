@model EditVideoMetaDataViewModel
@{
    ViewData["Title"] = "MovieInfoBox";
}


    <div class="media rounded bg-light">
        <img class="align-self-start m-3" src="@Model.CoverArtBase64" alt="@Model.Title" style="height: 144px; width: 96px;" />
        <div class="media-body h-100 border-left border-right pl-3 pr-3 pb-5">
            <h5 class="mt-3 mb-1">@Model.Title</h5>
            <span style="font-size: 10px;">@Model.Genre</span><br />
            <span style="font-size: 10px;">Rated: @Model.ParentalRating.ToString()</span><br />
            @Model.Description
        </div>
        <a class="align-self-start mr-3 ml-3 mt-3" asp-action="UpdateVideoContent" asp-controller="Admin" asp-route-id="@Model.Id"><img style="height: 32px; width: 32px;" src="~/img/edit.png" /></a>
    </div>


